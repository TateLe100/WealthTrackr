@model WealthTrackr.Models.Category

@{
    ViewData["Title"] = "Edit";
}
<div class="row mt-5">
    <div class="col-md-5 mx-auto">
        <div class="card">
            <h3 class="card-header">Edit Category</h3>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="CategoryId" />
                    <div class="row mt-2 col-8 mx-auto mb-3">
                        <div class="btn-group" role="group" aria-label="Basic example">
                            <input class="btn-check" type="radio" id="expense" asp-for="Type" value="Expense">
                            <label class="btn btn-secondary" for="expense">Expense</label>
                            <input class="btn-check" type="radio" id="income" asp-for="Type" value="Income">
                            <label class="btn btn-secondary" for="income">Income</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label mb-3">Category Name</label>
                        <input asp-for="CategoryName" class="form-control mb-3" />
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" /> | 
                        <a asp-action="MyCategories" class="btn btn-secondary">Back to List</a>
                    </div>
                    

                </form>
            </div>
        </div>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
