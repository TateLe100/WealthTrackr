@model List<Category>
@{
    ViewData["Title"] = "My Categories";
}

<div class="row mt-5">
    <div class="col-md-5 mx-auto">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Categories</h3> 
            </div>
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Category</th>
                            <th scope="col">Type</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CategoryName)
                                </td>

                                <td>
                                    @if (item.Type == "Income")
                                    {
                                        <span class="badge bg-success">@Html.DisplayFor(modelItem => item.Type)</span>
                                    }
                                    else if (item.Type == "Expense")
                                    {
                                        <span class="badge bg-danger">@Html.DisplayFor(modelItem => item.Type)</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.CategoryId" class="text-dark">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen-fill" viewBox="0 0 16 16">
                                            <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001" />
                                        </svg>
                                    </a> 
                                    |
                                    <a asp-action="Delete" asp-route-id="@item.CategoryId" class="text-dark">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                            <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5M8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5m3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0" />
                                        </svg>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                    
                </table>
                <a class="btn btn-sm btn-primary" asp-area="" asp-controller="Categories" asp-action="Create">Create Category</a>
                <a class="btn btn-sm btn-secondary" asp-area="" asp-controller="Home" asp-action="Dashboard">Back to Dashboard</a>
            </div>
        </div>
    </div>
</div>
