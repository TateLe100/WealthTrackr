@model WealthTrackr.ViewModels.FiancialAccountModel

@{
    ViewData["Title"] = "Create";
}

<div class="row mt-5">
    <div class="col-md-5 mx-auto">
        <div class="card">
           
            <h3 class="card-header">Create Financial Account</h3>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group m-2">
                        <label class="control-label">Account Name</label>
                        <input asp-for="AccountName" class="form-control" />
                        <span asp-validation-for="AccountName" class="text-danger"></span>
                    </div>
                    <div class="form-group m-2">
                        <label asp-for="Balance" class="control-label"></label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">$</span>
                            </div>
                            <input asp-for="Balance" class="form-control" type="number" />
                        </div>
                        <span asp-validation-for="Balance" class="text-danger"></span>
                    </div>
                    <div class="form-group m-2 mt-3">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
    



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
