<div class="card mb-4 col-md-8 mx-auto">
    <div class="card-header">
        <h3>Customers</h3>
    </div>
    <div class="card-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in ViewBag.CustomerList)
                {
                    <tr>
                        <td>@customer.FirstName</td>
                        <td>@customer.LastName</td>
                        <td>
                            <a class="btn btn-primary btn-sm" asp-controller="Admin" asp-action="ViewUserAccount" asp-route-id="@customer.Id">Account</a> |
                            <a class="btn btn-primary btn-sm" asp-controller="Admin" asp-action="ViewUserCategories" asp-route-id="@customer.Id">Categories</a> |
                            <a class="btn btn-primary btn-sm" asp-controller="Admin" asp-action="ViewUserTransactions" asp-route-id="@customer.Id">Transactions</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>