<h2>Manage Users</h2>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Password</th>
            <th>Manage</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in ViewBag.userList)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.RealPassword</td>
                <td>
                    <a href="/Admin/Edit/@user.Id">Edit</a> |
                    <a href="/Admin/Details/@user.Id">Details</a> |
                    <a href="/Admin/Delete/@user.Id" onclick="return confirm('Are you sure you want to delete this?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
