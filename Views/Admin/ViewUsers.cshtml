<h1>Customers</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Email</th>
            <th scope="col">Phone Number</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Manage</t>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in ViewBag.CustomerList)
        {
            <tr>
                <td>@customer.Email</td>
                <td>@customer.PhoneNumber</td>
                <td>@customer.FirstName</td>
                <td>@customer.LastName</td>
                <td>
                    <a class="text-dark" asp-controller="Admin" asp-action="Edit" asp-route-id="@customer.Id">Edit</a>
                    <a class="text-dark" asp-controller="Admin" asp-action="Delete" asp-route-id="@customer.Id" onclick="return confirm('Are you sure you want to delete this?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
