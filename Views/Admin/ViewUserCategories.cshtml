@model List<Category>
@{
    ViewData["Title"] = "My Categories";
}

<div class="row mt-5">
    <div class="col-md-5 mx-auto">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Categories for User: @ViewBag.SelectedUser.FirstName</h3>
            </div>
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Category</th>
                            <th scope="col">Type</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CategoryName)
                                </td>

                                <td>
                                    @if (item.Type == "Income")
                                    {
                                        <span class="badge bg-success">@Html.DisplayFor(modelItem => item.Type)</span>
                                    }
                                    else if (item.Type == "Expense")
                                    {
                                        <span class="badge bg-danger">@Html.DisplayFor(modelItem => item.Type)</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
                <div class="d-flex justify-content-center mt-3">
                    <a class="btn btn-sm btn-secondary" asp-area="" asp-controller="Admin" asp-action="ViewCustomerAccounts">Back to Accounts</a>
                </div>
            </div>
        </div>
    </div>
</div>