@model WealthTrackr.Areas.Data.ApplicationUser
@{
    ViewData["Title"] = "Edit";
}

<div class="row mt-5">
    <div class="col-md-5 mx-auto">
        <div class="card">
            <div class="card-header">
                <h3>Edit User Info</h3>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <div class="form-group">
                        <label class="mb-2">First Name</label>
                        <input type="text" class="form-control mb-2" name="FirstName" placeholder="First Name" value="@Model.FirstName" disabled>
                    </div>

                    <div class="form-group">
                        <label class="mb-2">Last Name</label>
                        <input type="text" class="form-control mb-2" name="LastName" placeholder="Last Name" value="@Model.LastName" disabled>
                    </div>

                    <div class="form-group">
                        <label class="mb-2">Email</label>
                        <input type="text" class="form-control mb-2" name="Email" placeholder="Email" value="@Model.Email" disabled>
                    </div>

                    <div class="form-group">
                        <label class="form-label">New Password</label>
                        <input class="form-control mb-3" type="text" placeholder="New Password" name="newPassword" />
                    </div>

                    <button type="submit" class="btn btn-primary">Update</button>
                </form>
            </div>
        </div>
    </div>
</div>
