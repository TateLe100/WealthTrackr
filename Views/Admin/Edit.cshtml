@model WealthTrackr.Areas.Data.ApplicationUser
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>



<h1>User Info</h1>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <input type="hidden" name="Id" value="@Model.Id" />
            <div class="form-group">
                <label>First name</label>
                <input type="text" class="form-control" name="FirstName" placeholder="First Name" value="@Model.FirstName" disabled>
            </div>

            <div class="form-group">
                <label>Last name</label>
                <input type="text" class="form-control" name="LastName" placeholder="Last Name" value="@Model.LastName" disabled>
            </div>

            <div class="form-group">
                <label>Email</label>
                <input type="text" class="form-control" name="Email" placeholder="Email" value="@Model.Email" disabled>
            </div>

            <div class="form-group">
                <label class="form-label">New Password</label>
                <input class="form-control mb-3" type="text" placeholder="New Password" name="newPassword" />
            </div>

            <button type="submit" class="btn btn-lg btn-primary">Update</button>
        </form>
    </div>
</div>